            // 数据源2: 弹窗显示的详细内容
            const strategies_details = [
                { title: "日常饮食", logic: "健康从口入：你吃什么，你的身体就如何运转。", points: ["核心逻辑：饮食是健康的基础。现代饮食中超加工食品过多，对身体负荷大。多样化的天然食物能更好地滋养身体，促进肠道健康。", "关键要点：", "减少超加工食品：这类食品通常高糖、高盐、高脂肪，营养价值低。尽量选择未经加工的天然食材。", "每周摄入30种不同植物：这能极大丰富肠道微生物多样性，增强免疫系统，改善整体健康。", "多喝水，观察尿液：每日确保2升左右的饮水，通过观察尿液颜色（稻草色且清澈为佳）判断是否充足，避免脱水或过量。"] },
                { title: "肠道健康", logic: "你的第二大脑：肠道菌群影响你的情绪、免疫力甚至大脑功能。", points: ["核心逻辑：肠道是微生物的巨大生态系统，其健康状况对全身影响深远。正确的排便姿势和良好的肠道菌群是关键。", "关键要点：", "蹲姿排便更顺畅：在坐式马桶上使用脚凳，抬高膝盖，使躯干与臀部呈35-60度角，可放松耻骨直肠肌，利于排便。", "补充益生元和益生菌：益生元是肠道细菌的食物（如香蕉、豆类），益生菌是友好的细菌（如酸奶、泡菜）。两者协同作用，维持肠道微生态平衡。", "排便时间管理：将每次排便时间限制在10分钟内，最好不超过5分钟，避免长时间用力引发痔疮。可在早餐后尝试定时排便，利用胃结肠反射。"] },
                { title: "大脑修复", logic: "升级你的CPU：大脑并非完美，需要科学维护以保持高效运作。", points: ["核心逻辑：大脑是一个高效但有缺陷的“操作系统”，需要定期“维护”和“升级”以应对现代生活的压力。", "关键要点：", "遵循90分钟超日节律：工作或学习90分钟后休息20分钟，可提升专注力和效率。", "避免一心多用：专注单任务能减少大脑能量消耗，提高任务质量。", "冷水泼脸或浸入冷水：触发“哺乳动物潜水反射”，迅速降低心率，有效缓解压力和焦虑。"] },
                { title: "心脏养护", logic: "守护你的永动机：心脏虽强大，但细节设计有弱点，需精心呵护。", points: ["核心逻辑：心脏的健康是生命的基础，细小的冠状动脉易受阻塞，情绪波动也会影响心肌健康。", "关键要点：", "限制盐和饱和脂肪摄入：每日盐摄入量低于5克，减少加工食品中的饱和脂肪，以降低心血管疾病风险。", "多做有氧运动：每周150分钟中等强度有氧运动，可促进血管健康，改善血液供应。", "警惕心碎综合征：强烈的情绪波动（无论是积极或消极）都可能导致应激性心肌病，削弱心肌功能，甚至致命。"] },
                { title: "肺部呼吸", logic: "生命的空气滤器：呼吸方式和空气质量直接影响肺健康。", points: ["核心逻辑：肺是脆弱但勤劳的器官，正确的呼吸习惯和良好的空气质量是其健康的关键。", "关键要点：", "多用鼻呼吸：鼻子能过滤、加湿、清洁空气，比口呼吸更健康。长期口呼吸可能改变面部结构。", "保持正确姿势：挺胸、沉肩，有助于膈肌呼吸，充分利用肺活量。", "改善室内空气：定期通风，保持清洁，种植室内植物可改善空气质量，减少污染物吸入。"] },
                { title: "骨骼关节", logic: "身体的支撑结构：骨骼并非一劳永逸，关节需保养才能持久。", points: ["核心逻辑：骨骼是身体的基础，但其密度会随年龄下降。关节承受重压，需通过运动和营养来维护。", "关键要点：", "30岁后防骨密度流失：多补充钙和维生素D（多晒太阳），并进行负重运动（如跑步、快走）。", "跑步有益膝盖：跑步等负重运动通过挤压软骨吸收新鲜液体，反而能延缓骨关节炎的发生。", "锻炼本体感觉：通过闭眼单腿站立等平衡练习，提高身体对关节位置的感知能力，减少跌倒和受伤风险。"] },
                { title: "眼睛护理", logic: "窗户与盲点：眼睛并非完美，需要休息和保护。", points: ["核心逻辑：眼睛的结构有其缺陷，如盲点和易受疲劳影响，但可通过简单方法缓解。", "关键要点：", "20-20-20法则：每20分钟，看20英尺（约6米）外的物体20秒，放松眼部肌肉。", "避免揉眼睛：频繁揉眼可能导致角膜变形，引发圆锥角膜。", "了解视觉盲点：人眼视网膜结构特殊，存在一个无法感光的盲点，但大脑会自动“填补”使我们察觉不到。"] },
                { title: "耳朵听力", logic: "平衡与声音：听力损伤不可逆，平衡感需训练。", points: ["核心逻辑：耳朵集听觉与平衡功能于一身，毛细胞损伤不可逆，需注意保护。", "关键要点：", "耳机音量60-60原则：使用耳机时音量不超过最大音量的60%，每次聆听不超过60分钟，避免毛细胞损伤。", "别用棉签掏耳朵：棉签会将耳垢推向深处，或损伤耳膜。耳垢是耳朵的自我清洁机制，会自行排出。", "平衡训练：通过单腿站立等练习，可以提高内耳平衡系统的功能，减少跌倒风险。"] },
                { title: "鼻子嗅觉", logic: "被低估的感官：鼻子功能远超想象，需正确护理。", points: ["核心逻辑：鼻子不仅关乎呼吸和嗅觉，还隐藏着健康秘密，正确护理至关重要。", "关键要点：", "鼻呼吸过滤空气：用鼻子呼吸能过滤、加湿和清洁空气，比口呼吸更健康。", "流鼻血正确处理：流鼻血时捏住鼻子前部（利特尔区），坐直，头微前倾，而非后仰。", "了解鼻周期：鼻腔内存在勃起组织，每隔几小时会交替充血，导致一侧鼻孔暂时堵塞，这是正常生理现象。"] },
                { title: "睡眠健康", logic: "夜间充电站：高质量睡眠是身体修复和认知巩固的关键。", points: ["核心逻辑：睡眠是身体和大脑进行修复与整理的必要过程，缺乏睡眠会对健康产生严重影响。", "关键要点：", "固定作息，早晨晒太阳：保持规律的睡眠时间，早晨醒来后暴露在明亮光线或阳光下，有助于调节生物钟。", "睡前放松，远离屏幕：睡前1-2小时调暗灯光，避免使用电子设备，进行阅读或冥想，帮助大脑放松。", "小睡20或90分钟：20分钟小睡可快速恢复精力；90分钟小睡可完成一个完整睡眠周期，有助于巩固记忆。"] }
            ];
            
            // 获取弹窗及其内部元素的引用
            const popup = document.getElementById('keyPopup');
            const popupTitle = document.getElementById('popupTitle');
            const popupLogic = document.getElementById('popupLogic');
            const popupPoints = document.getElementById('popupPoints');
            const closePopupBtn = document.getElementById('closePopupBtn');
            const pianoContainer = document.createElement('div');


            // 渲染摘要（钢琴键）的函数
            function renderPianoKeys() {
                const container = document.getElementById('dashboard');
                if (!container) return;

                pianoContainer.className = 'piano-container';
                
                strategies_summary.forEach((summaryStrategy, index) => {
                    const key = document.createElement('div');
                    const keyType = index % 2 === 0 ? 'white-key' : 'black-key'; // 交替颜色
                    key.className = `piano-key ${keyType}`;
                    key.dataset.index = index; // 存储索引，用于弹窗查找详细内容
                    
                    const summaryPointsHTML = summaryStrategy.points.map(point => `<li>${point}</li>`).join('');

                    key.innerHTML = `
                        <div class="key-header">
                            <div class="key-icon">${summaryStrategy.icon}</div>
                            <h3 class="key-title">${summaryStrategy.title}</h3>
                        </div>
                        <p class="key-logic">${summaryStrategy.logic}</p>
                        <ul class="key-points">
                            ${summaryPointsHTML}
                        </ul>
                    `;
                    pianoContainer.appendChild(key);
                });

                container.appendChild(pianoContainer);
            }

            // 打开弹窗并填充内容的函数
            function openPopup(index) {
                const detailData = strategies_details[index];
                if (!detailData) return;

                popupTitle.textContent = detailData.title;
                popupLogic.textContent = detailData.logic;
                
                // 清空旧的列表项并填充新的
                popupPoints.innerHTML = detailData.points.map(point => `<li>${point}</li>`).join('');
                
                popup.classList.add('visible');
            }

            // 关闭弹窗的函数
            function closePopup() {
                popup.classList.remove('visible');
            }

            // === 事件监听器设置 ===

            renderPianoKeys();

            // 使用事件委托，监听整个钢琴容器的点击事件
            pianoContainer.addEventListener('click', function(event) {
                const key = event.target.closest('.piano-key');
                if (key) {
                    const index = key.dataset.index;
                    openPopup(index);
                }
            });

            // 关闭按钮的点击事件
            closePopupBtn.addEventListener('click', closePopup);

            // 点击弹窗背景（遮罩层）关闭弹窗
            popup.addEventListener('click', function(event) {
                if (event.target === popup) {
                    closePopup();
                }
            });

            // 按下Escape键关闭弹窗
            document.addEventListener('keydown', function(event) {
                if (event.key === 'Escape' && popup.classList.contains('visible')) {
                    closePopup();
                }
            });

            // 其他页面功能的JS...
            // 检查项交互
            document.querySelectorAll('.checklist li').forEach(item => {
                const checkbox = item.querySelector('input[type="checkbox"]');
                item.addEventListener('click', (e) => {
                    if (e.target.tagName.toLowerCase() !== 'input' && e.target.tagName.toLowerCase() !== 'label' ){
                        checkbox.checked = !checkbox.checked;
                    }
                    item.classList.toggle('completed', checkbox.checked);
                });
            });

            // 滚动相关功能
            const backToTopButton = document.getElementById('backToTopBtn');
            const handleScroll = () => {
                // 进度条
                const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
                const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
                const scrolled = height > 0 ? (winScroll / height) * 100 : 0;
                document.getElementById("progressBar").style.width = scrolled + "%";

                // 返回顶部按钮可见性
                if (window.pageYOffset > 300) {
                    if(backToTopButton) backToTopButton.classList.add('visible');
                } else {
                    if(backToTopButton) backToTopButton.classList.remove('visible');
                }
            };
            
            window.addEventListener('scroll', handleScroll);
            handleScroll();

            // 返回顶部按钮点击事件
            if(backToTopButton) {
                backToTopButton.addEventListener('click', () => {
                    window.scrollTo({ top: 0, behavior: 'smooth' });
                });
            }
        });
    </script>
</body>
</html>
